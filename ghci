:set -XNoMonomorphismRestriction

-- hoogle integration
:def hoogle \q -> return $ ":! hoogle --color=true --count=15  \"" ++ q ++ "\""
:def doc    \q -> return $ ":! hoogle --color=true --info      \"" ++ q ++ "\""

:m +Data.Maybe
:m +Data.List
:m +Data.Char
:m +Data.Ord
:m +Data.Monoid
:m +Data.Tuple
:m +Data.List.Split
import Control.Arrow hiding ((|||))
:m +Control.Applicative
:m +Control.Monad
:m +Text.Groom

:set prompt ">>> "
