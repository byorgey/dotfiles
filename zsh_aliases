host() {
  scp $1 byorgey@eniac.seas.upenn.edu:public_html/hosted
  HOST_URL="http://www.cis.upenn.edu/~byorgey/hosted/$1"
  echo $HOST_URL
  echo -n $HOST_URL | xclip -i
}

